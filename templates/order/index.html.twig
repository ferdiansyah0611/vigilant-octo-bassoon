{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h1>Order index</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Status</th>
                                <th>Count</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for order in orders %}
                            <tr>
                                <td>{{ order.id }}</td>
                                <td>{{ order.status }}</td>
                                <td>{{ order.count }}</td>
                                <td>
                                    <a href="{{ path('order_show', {'id': order.id}) }}">show</a>
                                    <a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a class="mt-2" href="{{ path('order_new') }}">Create new</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
