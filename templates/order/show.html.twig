{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 grid-margin stretch-card show">
            <div class="card">
                <div class="card-body">
                    <h1>Order</h1>

                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ order.id }}</td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>{{ order.status }}</td>
                            </tr>
                            <tr>
                                <th>Count</th>
                                <td>{{ order.count }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('order_index') }}">back to list</a>

                    <a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>

                    {{ include('order/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
