{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 grid-margin stretch-card show">
            <div class="card">
                <div class="card-body">
                    <h1>Product</h1>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ product.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ product.name }}</td>
                            </tr>
                            <tr>
                                <th>Price</th>
                                <td>{{ product.price }}</td>
                            </tr>
                            <tr>
                                <th>Stock</th>
                                <td>{{ product.stock }}</td>
                            </tr>
                            <tr>
                                <th>Image</th>
                                <td>
                                    <img src="/uploads/image/{{ product.image }}" alt="{{ product.image }}">
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('product_index') }}">back to list</a>

                    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

                    {{ include('product/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
